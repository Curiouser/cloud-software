extends layout

block content
    h1= title
    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Characters
            p
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th AllianceID
                    th Delete
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                button#btnAddUser Add User
        // /ADD USER

        // MAP
        #map
        // /MAP
    // /WRAPPER
